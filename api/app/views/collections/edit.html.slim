- title @collection.title

= react_component 'Collections/Form', { id: @collection.id, title: @collection.title, values: { title_ru: @collection.title_ru, title_en: @collection.title_en, slug: @collection.slug, desc: @collection.desc, text_ru: @collection.text_ru, text_en: @collection.text_en, weight: @collection.weight, images: @collection.images.sort_by{ |i| [(i.weight.to_i.zero? ? 99 : i.weight), i.created_at] }.map{|i| {id: i.id, weight: i.weight, preview: i.photo.preview.url, thumb: i.photo.thumb.url, collection: i.photo.collection.url}} }}
