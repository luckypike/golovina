.form
  = simple_form_for(@category) do |f|
    = f.error_notification

    .form_inputs
      = f.input :title
      = f.input :slug
      = f.association :parent_category, collection: Category::tree
      = f.input :state
      = f.input :weight
      = f.input :desc

    .form_actions
      = f.button :submit
